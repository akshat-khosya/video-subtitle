{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react",
    "module": "commonjs",
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/ts/**/*",
    "function",
    "@types"
  ],
  "exclude": [
    "/dist"
  ]
}